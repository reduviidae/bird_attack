<h2>Add a New Child</h2>

<%= form_for @child do |f| %>
<%= f.label :name %>
<%= f.text_field :name %>
<%= f.label :password %>
<%= f.password_field :password %>
<%= f.number_field :hp, value: @hp, hidden: true %>
<%= f.number_field :hunger, value: @hunger, hidden: true %>
<%= f.number_field :location_x, value: @location_x, hidden: true %>
<%= f.number_field :location_y, value: @location_y, hidden: true %>
<%= f.submit "Submit Child" %>
<% end %>
